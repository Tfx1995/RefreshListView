<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_refresh_head"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_refresh_head_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/ll_refresh_head_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <!-- 文字 -->

            <TextView
                android:id="@+id/tv_refresh_head_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="下拉刷新"
                android:textSize="15sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/ll_refresh_head_desc" >

            <!-- 箭头 -->

            <ImageView
                android:id="@+id/iv_refresh_head_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/refresh_down" />
            <!-- 进度条 -->

            <ProgressBar
                android:id="@+id/pb_refresh_head_cricle"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/listview_referesh_circle"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>